---
import CardSkill from "@/components/Cards/CardSkill.astro";
import { BackEndSkills, FrontEndSkills, ProgrammingSkills, Tools } from "@/types/BadgeEnums";

const programmingSkillArray = Object.values(ProgrammingSkills);
const frontendSkillArray = Object.values(FrontEndSkills);
const backendSkillArray = Object.values(BackEndSkills);
const toolSkillArray = Object.values(Tools)
---

<div class="flex flex-col space-y-2">
    <h1 class="text-xl font-bold">Skills</h1>

    <CardSkill
      cardSkillTitle="Programming Languages"
      cardSkillItem={programmingSkillArray}
    />

    <CardSkill 
      cardSkillTitle="Frontend Development"
      cardSkillItem={frontendSkillArray}
    />

    <CardSkill 
      cardSkillTitle="Backend Development"
      cardSkillItem={backendSkillArray}
    />

    <CardSkill 
      cardSkillTitle="Tools"
      cardSkillItem={toolSkillArray}
    />
</div>