---
import Badge from "@components/Badge.astro";
import { ProgrammingSkills } from "@/types/BadgeEnums";
import CardContainer from "@/components/Cards/CardContainer.astro";
import CardBody from "@/components/Cards/CardBody.astro";

const programmingSkillsArray = Object.values(ProgrammingSkills);
---

<div class="flex flex-col min-h-screen outline-solid">
    <h1 class="text-5xl font-bold">Skills</h1>

    <div class="card card-xs card-border bg-base-200">
      <div class="card-body shadow-md rounded-lg mx-3">
        <h1 class="card-title text-xl">Programming Languages</h1>
        <div class="flex gap-2 flex-wrap">
            {programmingSkillsArray.map((skill) => (
              <Badge badgeClass="shadow-md" badgeText={skill}/>
            ))}
        </div>
      </div>
    </div>

    <CardContainer 
      cardContainerSize="xs" 
      cardContainerBorder={true} 
      cardContainerClass="bg-base-200 shadow-md rounded-lg mx-3"
    >
      <CardBody 
        cardBodyChildrenClass="gap-2 flex-wrap"
        cardBodyTitleClass="text-xl" 
        cardBodyTitle="Programming Languages"
      >
        {programmingSkillsArray.map((skill) => (
          <Badge badgeClass="shadow-md" badgeText={skill}/>
        ))}
      </CardBody>
    </CardContainer>
</div>