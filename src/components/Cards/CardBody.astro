---
type CardBodyProps = {
    cardBodyTitle?: string;
    cardBodyDescription?: string;
    cardBodyClass?: string;
    cardBodyTitleClass?: string;
    cardBodyChildrenClass?: string;
};

const {
    cardBodyTitle = "",
    cardBodyDescription = "",
    cardBodyClass = "",
    cardBodyTitleClass = "",
    cardBodyChildrenClass = "",
}: CardBodyProps = Astro.props;
---

<div class={`card-body ${cardBodyClass}`}>
    <p class={`card-title ${cardBodyTitleClass}`}>{cardBodyTitle}</p>
    <div class="card-description">{cardBodyDescription}</div>
    <div class={`flex ${cardBodyChildrenClass}`}>
        <slot />
    </div>
</div>