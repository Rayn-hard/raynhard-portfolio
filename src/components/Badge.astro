---
type BadgeProps = {
    badgeText?: string;
    badgeSize?: "xs" | "sm" | "md" | "lg" | "xl";
    badgeStyle?: "solid" | "outline" | "dash" | "soft" | "ghost";
    badgeColor?: "primary" | "secondary" | "neutral" | "accent" | "info" | "success" | "warning" | "error"
    badgeClass?: string;
}

const {
    badgeText = "",
    badgeSize = "md",
    badgeStyle = "solid",
    badgeColor = "neutral",
    badgeClass = "",
}: BadgeProps = Astro.props
---

<div class={`badge badge-${badgeSize} badge-${badgeStyle} badge-${badgeColor} ${badgeClass}`}>{badgeText}</div>